.btn-standard
  border 0
  border-radius(100px)
  background-color $second
  color $white
  cursor pointer
  display inline-block
  font-size pxToEm(14)
  font-weight 400
  letter-spacing -0.3px
  padding 12px 30px
  text-transform uppercase
  transition(background-color 0.3s)

  &:hover, &:active, &:focus
    background-color $second-600
